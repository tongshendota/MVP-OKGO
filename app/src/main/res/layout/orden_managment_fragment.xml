<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9f9"
    >
<EditText
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/text_shape_yes"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:drawableLeft="@mipmap/setup"
    android:paddingLeft="15dp"
    android:hint="@string/search"
    android:textColorHint="@color/text_color"
    android:textSize="@dimen/text_moneny"
    android:textStyle="bold"
    android:textColor="@color/text_color"
    android:gravity="center|left"
    />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center|left"
        android:paddingLeft="15dp"
        android:background="@color/color_f9f9f9"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"
        android:id="@+id/today"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/top_titler"
        android:orientation="horizontal"
        android:background="@color/color_f9f9f9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size"
            android:text="@string/num"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size"
            android:text="@string/time"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size"
            android:text="@string/size"
            />
        <TextView    android:textSize="@dimen/text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mode"
            />
        <TextView    android:textSize="@dimen/text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/state"
            />
        <TextView    android:textSize="@dimen/text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="@string/sum"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f9f9f9"
        >

        <ImageView
            android:id="@+id/tv_loaderror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="90dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:src="@mipmap/loding"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_loadnoresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_loaderror"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="暂无收款记录"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_view_size"
            android:visibility="gone" />
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0.1dp"
            android:listSelector="#00000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </ListView>
    </RelativeLayout>

</LinearLayout>