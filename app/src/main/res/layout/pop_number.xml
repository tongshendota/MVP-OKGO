<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="48dp"
         android:orientation="horizontal"
         android:weightSum="1">
            <ImageView
                android:id="@+id/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                  android:src="@mipmap/black"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="0.09" />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="@string/input_number"
             android:gravity="center"
             android:textSize="@dimen/text_size"
             android:textColor="@color/text_color"
             />
     </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/text_color"
       ></View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grade"
        android:gravity="center|left"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"
        />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:gravity="center"
           android:id="@+id/sumnumber"
           android:textSize="@dimen/text_moneny"
           android:textColor="@color/black"
           android:text=""
           />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_color"
        ></View>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/table_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#c8cbcc"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <LinearLayout style="@style/layout_input_amount_style">

                <Button
                    android:id="@+id/btn_7"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="9" />

            </LinearLayout>
            <LinearLayout style="@style/layout_input_amount_style">
                <Button
                    android:id="@+id/btn_4"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="4" />
                <Button
                    android:id="@+id/btn_5"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="5" />
                <Button
                    android:id="@+id/btn_6"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="6" />
            </LinearLayout>
            <LinearLayout style="@style/layout_input_amount_style">
                <Button
                    android:id="@+id/btn_1"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="1" />
                <Button
                    android:id="@+id/btn_2"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="2" />
                <Button
                    android:id="@+id/btn_3"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="3" />
            </LinearLayout>
            <LinearLayout style="@style/layout_input_amount_style">
                <Button
                    android:id="@+id/btn_set"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="@string/modify" />
                <Button
                    android:id="@+id/btn_0"
                    style="@style/btn_input_amount_style"
                    android:layout_marginRight="1dp"
                    android:text="0" />
                <Button
                    android:id="@+id/btn_commit"
                    style="@style/btn_input_amount_style"
                    android:background="@color/yellow"
                    android:layout_marginRight="1dp"
                    android:textColor="@color/white"
                    android:text="@string/determine" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>